@model Movies

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Add New Movie
            </h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ReviewScore"></label>
            <input asp-for="ReviewScore" class="form-control" />
            <span asp-validation-for="ReviewScore" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RelaseDate"></label>
            <input asp-for="RelaseDate" class="form-control" />
            <span asp-validation-for="RelaseDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Runtime"></label>
            <input asp-for="Runtime" class="form-control" />
            <span asp-validation-for="Runtime" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Movies" asp-action="Index" class="btn btn-secondary" style="width:150px">Return to list</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}