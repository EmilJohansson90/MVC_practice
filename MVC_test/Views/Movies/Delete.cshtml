@model Movies

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Movie
            </h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ReviewScore"></label>
            <input asp-for="ReviewScore" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="RelaseDate"></label>
            <input asp-for="RelaseDate" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Runtime"></label>
            <input asp-for="Runtime" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Movies" asp-action="Index" class="btn btn-secondary" style="width:150px">Return to list</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}