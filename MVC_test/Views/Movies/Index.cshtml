@model IEnumerable<Movies>
@{
    ViewData["Title"] = "Index";
}

<div class="containter p-3">
    <div class="row pt-4">
        <div class="col-6">            
            <h2>Movie List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Movies" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Movie</a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Movie Name
            </th>
            <th>
                Review Score
            </th>
            <th>
                Release Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="40%">
                    @obj.Name
                </td>
                <td width="15%">
                    @obj.ReviewScore
                </td>
                <td width="25%">
                    @obj.RelaseDate
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Movies" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Movies" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>